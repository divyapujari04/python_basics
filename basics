    #arithmatic operators
# +
# -
# *
# /
print(5//2) #no decimal printed
    #Modular/remainder operators: Prints remainder
print(5%2) 
    #Power operators
print(5**2)

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #shortcuts
i = 6
i += 2
i -= 2
i *= 4
i //= 3
print(i)

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #Logical operator 
    #OR: if at least one is true, output is true
print(2>3 or 2>1)
    #AND: iff both conditions are true, output is true
print(3>2 and 5>4)
    #NOT: true becomes false and false becomes true
print(not 4>3)

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #IF-ELSE
age = input("enter your age: ")
age = int(age)
if age >= 18:
    print("You are an adult, you can vote")
elif age < 18 and age > 3:
    print("You are a minor")
else:
    print("You are a kid")

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    # range: includes nums <= n from 0, including 0
nums= range(4)
print(nums)

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #while loop
i = 1
while i <= 10:
    print(i)
    i += 1

j = 1
while j <= 5:
    print(j * "*")
    j += 1

j = 5
while j >= 1:
    print(j * "*")
    j -= 1

-------------------------------------------------------------------------------------------------------------------------------------------------------------

    #for loops used for list
for i in range(5):
    print(i)
for i in range(4):
     print(i + 1)

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #List: complex data type. Collection of items of any data type.
random = [3,4,"a","can"]
print(random)
print(random[3])
    # python supports neagative indexing where '-1' is the last item of the list.
print(random[-4])
print(random[0:3]) #includes 0. does not include 3
print(random[0:4])
for comps in random:
    print(comps)
    #output:    3
                4
                a
                can

marks = [87, 97]

marks.append(91)
print(marks)

marks.insert(0, 70)
print(marks)

print( 97 in marks)

print(len(marks))

marks.clear()

-------------------------------------------------------------------------------------------------------------------------------------------------------------


    #break and continue
students = ["ram", "sham", "kiran", "radha"]

for stu in students:
    if stu == "kiran":
        break
    print(stu)
    
students = ["ram", "sham", "kiran", "radha"]

for stu in students:
    if stu == "kiran":
        continue
    print(stu)


-------------------------------------------------------------------------------------------------------------------------------------------------------------

    #tuples: (), cannot be changed once diclared, can be writted without parenthesis
marks = (98, 98, 76, 53)

print(marks.count(98))
print(marks.index(53)) #incase of repeated numbers, it prints the index when the number occured for the first time.


-------------------------------------------------------------------------------------------------------------------------------------------------------------

    #sets: unique items, {}, does not have indexing: unordered 
marks = {98, 98, 65, 85 ,54, 55, 55}
print(marks)

for score in marks:
    print(score)

-------------------------------------------------------------------------------------------------------------------------------------------------------------

    #Dictionary: stores as key and values, changable
marks = {"English" : 97, "Chemistry": 81}
print(marks["Chemistry"])
marks["phy"] = 96
print(marks)

marks['phy'] = 99
print(marks)

